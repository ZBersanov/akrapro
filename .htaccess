RewriteEngine On
RewriteBase /

# если запрашивается директория или файл — отдаём как есть
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ручные перенаправления
RewriteRule ^school/?$ /school.html [L]
RewriteRule ^media/?$ /media.html [L]

# всё остальное на index.html
RewriteRule ^.*$ /index.html [L]
